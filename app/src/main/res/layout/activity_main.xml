<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mm="http://millennialmedia.com/android/schema"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thefan.android.MainActivity">

    <TextView android:id="@+id/player_station_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:textColor="#000000"/>

    <TextView android:id="@+id/player_stream_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:textColor="#000000"
        android:layout_below="@+id/player_station_name"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/player_stream_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:textColor="#000000"
        android:layout_below="@+id/player_stream_name"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_height="130dp"
        android:layout_width="130dp"
        android:id="@+id/playpause"
        android:src="@drawable/pbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
